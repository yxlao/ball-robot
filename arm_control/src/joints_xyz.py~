#!/usr/bin/env python

import rospy
from std_msgs.msg import Float32
from arm_functions import degree_to_xyz

def callback1(msg):
    global degree1=msg.data

def callback2(msg):
    global degree2=msg.data

def callback1(msg):
    global degree3=msg.data

def listener():
    rospy.Subscriber('/joint1/degree', Float32, callback1)
    rospy.Subscriber('/joint2/degree', Float32, callback2)
    rospy.Subscriber('/joint3/degree', Float32, callback3)
    degree_to_xyz(0,degree1,degree2,degree3)
    rospy.spin()

    
rospy.init_node('joints_xyz',anonymous=True)
listener()
